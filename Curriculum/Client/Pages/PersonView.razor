@page "/person"

    <EntityForm @bind-Entity="person" TEntity="Person" RequestUri="api/persons" Title="Person">
        <NumberField @bind-Value="person.Id" readonly />
        <TextField @bind-Value="person.Name" />
        <TextField @bind-Value="person.Email" />
        <DateField @bind-Value="person.BirthDate" />
    </EntityForm>

@code {
    Person person = new Person();
}

